          "author",
          "title"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "pages": {
            "type": "array",
            "items": {
              "type": "union",
              "refs": [
                "pub.leaflet.pages.linearDocument"
              ]
            }
          }
        }
      }
    }
  }
}